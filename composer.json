{
    "name": "lightspeeddevelopment/lsx-starter-script",
    "description": "This is a composer plugin with tools to create your LSX based plugin or theme.",
    "type": "wordpress-plugin",
    "require": {
        "cmb2/cmb2": "^2.7"
    },
    "license": "GPL3",
    "authors": [
        {
            "name": "Warwick Booth",
            "email": "warwick@lsdev.biz"
        }
    ],
    "scripts": {
        "post-install-cmd": [
			"git clone https://github.com/lightspeeddevelopment/lsx-starter-plugin.git vendor/lsx-starter-plugin",
			"git clone https://github.com/lightspeeddevelopment/lsx-starter-theme.git vendor/lsx-starter-theme"
		],
        "fetch-git-repos": [
			"git -C vendor/lsx-starter-plugin fetch",
			"git -C vendor/lsx-starter-theme fetch"
		]
    }
}
